{
  "name": "pwa-starter",
  "version": "0.0.1",
  "description": "A starter kit for building PWAs!",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev-server": "vite --port 3000",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "build": "tsc && vite build && tsx scripts/generate-ssr-skeleton.ts",
    "start": "npm run dev",
    "start-remote": "vite --host",
    "start-for-tests": "npm run build && vite preview --port 3000",
    "bundle:analyze": "ANALYZE_BUNDLE=true npm run build",
    "test": "playwright test",
    "lint": "eslint \"src/**/*.{ts,js}\" \"functions/src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" \"functions/src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,css,html}\" \"*.{ts,js,css,html,json}\" \"functions/src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,html}\" \"*.{ts,js,css,html,json}\" \"functions/src/**/*.{ts,js}\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fluentui/web-components": "^2.5.16",
    "@khmyznikov/pwa-install": "^0.2.7",
    "@lit-labs/ssr": "^3.3.1",
    "@lit-labs/virtualizer": "^2.0.11",
    "@material/web": "^1.1.1",
    "@pwabuilder/pwainstall": "^1.6.7",
    "@shoelace-style/shoelace": "^2.20.1",
    "@thepassle/app-tools": "^0.10.0",
    "@types/marked": "^6.0.0",
    "@vaadin/router": "^2.0.0",
    "@xenova/transformers": "^2.17.2",
    "blurhash-wasm": "^0.2.0",
    "browser-fs-access": "^0.38.0",
    "fast-blurhash": "^1.1.2",
    "hotkeys-js": "^3.10.1",
    "idb-keyval": "^6.2.0",
    "lit": "^3.3.1",
    "marked": "^17.0.0",
    "urlpattern-polyfill": "^10.1.0",
    "workbox-background-sync": "^6.5.4",
    "workbox-build": "^6.5.4",
    "workbox-core": "^6.5.2",
    "workbox-expiration": "^6.5.4",
    "workbox-navigation-preload": "^6.5.4",
    "workbox-precaching": "^6.5.4",
    "workbox-routing": "^6.5.4",
    "workbox-strategies": "^6.5.4",
    "workbox-window": "^6.5.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.32.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.2",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-wasm": "^3.2.1"
  }
}
